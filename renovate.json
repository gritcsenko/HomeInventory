{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboardApproval"
  ],
  "dockerfile": {
    "enabled": true
  },
  "docker-compose": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "description": "Group GitHub Actions updates together"
    },
    {
      "groupName": "Reqnroll ecosystem",
      "description": "Group Reqnroll packages to prevent transitive dependency conflicts",
      "matchPackageNames": [
        "/^Reqnroll/",
        "/^Expressium\\.LivingDoc\\.ReqnrollPlugin$/"
      ]
    },
    {
      "groupName": "Entity Framework Core",
      "description": "Group EF Core packages - must stay on same version",
      "matchPackageNames": [
        "/^Microsoft\\.EntityFrameworkCore/"
      ]
    },
    {
      "groupName": "LanguageExt",
      "description": "Group LanguageExt packages - must stay on same version",
      "matchPackageNames": [
        "/^LanguageExt\\.(Core|Rx|Sys|CodeGen|AutoFixture|UnitTesting)$/"
      ]
    },
    {
      "groupName": "Microsoft Extensions",
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "description": "Group Microsoft.Extensions.* packages for coordinated updates",
      "matchPackageNames": [
        "/^Microsoft\\.Extensions\\./"
      ]
    },
    {
      "groupName": "xUnit",
      "description": "Group xUnit test framework packages",
      "matchPackageNames": [
        "/^xunit/",
        "/^Microsoft\\.NET\\.Test\\.Sdk$/"
      ]
    },
    {
      "groupName": "TngTech ArchUnit",
      "description": "Group ArchUnitNET packages - must stay on same version",
      "matchPackageNames": [
        "/^TngTech\\.ArchUnitNET/"
      ]
    },
    {
      "groupName": "Ardalis Specification",
      "description": "Group Ardalis.Specification packages - must stay on same version",
      "matchPackageNames": [
        "/^Ardalis\\.Specification/"
      ]
    },
    {
      "groupName": "Health Checks",
      "description": "Group health check packages",
      "matchPackageNames": [
        "/^AspNetCore\\.HealthChecks\\./"
      ]
    },
    {
      "groupName": "Serilog",
      "description": "Group Serilog logging packages",
      "matchPackageNames": [
        "/^Serilog/"
      ]
    }
  ]
}
